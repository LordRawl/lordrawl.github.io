mixin programm__item-nav(numb, title, target)
	li.programm__item-nav(data-target=target)&attributes(attributes)
		p.programm__numb!= numb
		p.programm__text!= title

mixin programm__item-block(img, target, structure, clasr)
	li.programm__item-block(data-target-object=img)&attributes(attributes)
		.programm__block
			.programm__block_left
				ul.programm__sublist
					p.programm__subtitle Цель занятия:
					each trg in target
						li.programm__subitem
							span.programm__subitem-text!= trg
				ul.programm__sublist(class="" + ( (clasr) ? 'programm__sublist_flex' : ''))
					p.programm__subtitle Структура занятия:
					each str in structure
						li.programm__subitem
							span.programm__subitem-text!= str
			.programm__block_right
				.programm__image
					img(src="img/programm/programm-"+img+".jpg", alt="slide").programm__image-pict

mixin result__item(photo, name, city, employ, profitBefore, profitAfter, doin, ...items)
	li.result__item
		.result__subblock
			.result__image
				img(src="img/result/"+photo+".jpg", alt=name).result__image-photo
			.result__subblock-about
				.result__subblock-name
					a(href="#" target="_blank").result__name!= name
					p.result__city!= city
					p.result__employ!= employ
				.result__subblock-made
					p.result__text-made!= doin
					ul.result__sublist
						each item in items
							li.result__subitem!= item
			.result__subblock-profit.aside-block
				.result__subblock-profit_before
					p.result__text-title Прибыль до «Долины»
					p.result__text #{profitBefore} рублей
				.result__subblock-profit_after
					p.result__text-title Через шесть недель обучения 
					p.result__text #{profitAfter} рублей

			

mixin packet__subitem(icon, text, descr)
	li.packet__subitem
		svg.packet__icon
			use(xlink:href="#"+icon)
		p.packet__text!= text 

mixin benefit__item(text, discont)
	li.benefit__item
		label.benefit__label
			input(type="radio", name="discont").benefit__label-input
			svg.benefit__check(viewBox="0 0 25 25")
				circle(cx="12.5" cy="12.5" r="12").benefit__check-stroke
				circle(cx="12.5" cy="12.5" r="9").benefit__check-color
			p.benefit__text!= text
			if discont=="бесплатно"
				p.benefit__discont(data-discont='100%')!= discont
			else
				p.benefit__discont(data-discont=discont) -#{discont}



